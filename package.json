{
  "name": "linguareader",
  "version": "1.0.9",
  "description": "Cross-platform PDF reader with translation and vocabulary learning",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "concurrently \"vite\" \"npm run electron:dev\"",
    "electron:dev": "tsc -p tsconfig.electron.json && electron . --no-sandbox",
    "build": "tsc -p tsconfig.electron.json && vite build",
    "build:linux": "npm run build && electron-builder --linux",
    "build:win": "npm run build && electron-builder --win",
    "build:mac": "npm run build && electron-builder --mac",
    "build:all": "npm run build && electron-builder --linux --win --mac"
  },
  "keywords": [
    "pdf",
    "translation",
    "learning",
    "vocabulary"
  ],
  "homepage": "https://github.com/yusufdinc974/LinguaReader",
  "author": {
    "name": "Yusuf Dinc",
    "email": "yusufdinc974@github.com"
  },
  "license": "MIT",
  "dependencies": {
    "better-sqlite3": "^11.8.1",
    "electron-updater": "^6.7.3",
    "express": "^5.2.1",
    "ip": "^2.0.1",
    "lucide-react": "^0.469.0",
    "pdfjs-dist": "^4.10.38",
    "qrcode": "^1.5.4",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-router-dom": "^7.1.1",
    "recharts": "^2.15.0",
    "zustand": "^5.0.3"
  },
  "devDependencies": {
    "@electron/rebuild": "^3.7.1",
    "@types/better-sqlite3": "^7.6.13",
    "@types/express": "^5.0.6",
    "@types/ip": "^1.1.3",
    "@types/node": "^22.10.7",
    "@types/qrcode": "^1.5.6",
    "@types/react": "^19.0.7",
    "@types/react-dom": "^19.0.3",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.2",
    "electron": "^34.0.0",
    "electron-builder": "^25.1.8",
    "postcss": "^8.5.1",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.7.3",
    "vite": "^6.0.7"
  },
  "build": {
    "appId": "com.linguareader.app",
    "productName": "LinguaReader",
    "icon": "build/icon.png",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "!**/*chrome-sandbox",
      "!**/*chrome_sandbox"
    ],
    "extraResources": [
      {
        "from": "icon.png",
        "to": "icon.png"
      }
    ],
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Education",
      "icon": "build/icons",
      "executableName": "LinguaReader",
      "maintainer": "Yusuf Dinc <yusufdinc974@github.com>",
      "executableArgs": [
        "--no-sandbox"
      ]
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "icon.png"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "yusufdinc974",
        "repo": "LinguaReader"
      }
    ],
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "icon.png",
      "category": "public.app-category.education"
    }
  }
}
