{
    "name": "LinguaReader",
    "version": "0.1.0",
    "description": "An Electron application for reading PDFs and building vocabulary",
    "author": "Yusuf DinÃ§",
    "license": "MIT",
    "main": "public/electron.js",
    "homepage": "./",
    "private": true,
    "dependencies": {
        "@react-pdf-viewer/core": "^3.12.0",
        "electron-log": "^5.3.2",
        "electron-store": "^8.1.0",
        "electron-updater": "^6.3.9",
        "framer-motion": "^10.16.4",
        "kuromoji": "^0.1.2",
        "nodejieba": "^3.4.4",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-router-dom": "^6.18.0",
        "react-scripts": "5.0.1",
        "recharts": "^2.15.1",
        "say.js": "^1.4.0",
        "tiny-segmenter": "^0.2.0",
        "wanakana": "^5.3.1"
    },
    "devDependencies": {
        "concurrently": "^8.2.1",
        "cross-env": "^7.0.3",
        "electron": "^25.8.0",
        "electron-builder": "^24.6.4",
        "wait-on": "^7.0.1"
    },
    "scripts": {
        "start": "react-scripts start",
        "build": "react-scripts build",
        "test": "react-scripts test",
        "eject": "react-scripts eject",
        "electron:dev": "concurrently \"cross-env BROWSER=none npm start\" \"wait-on http://localhost:3000 && electron .\"",
        "electron:build": "npm run build && electron-builder build --publish never",
        "electron:start": "electron .",
        "dist:win": "npm run build && electron-builder build --win --publish always",
        "dist:mac": "npm run build && electron-builder build --mac --publish always",
        "dist:linux": "npm run build && electron-builder build --linux --publish always",
        "dist:all": "npm run build && electron-builder build -mwl --publish always"
    },
    "eslintConfig": {
        "extends": [
            "react-app",
            "react-app/jest"
        ]
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "build": {
        "appId": "com.vocabulary.pdfreader",
        "productName": "LinguaReader",
        "files": [
            "build/**/*",
            "node_modules/**/*",
            "public/electron.js",
            "public/preload.js",
            "package.json"
        ],
        "directories": {
            "buildResources": "assets"
        },
        "win": {
            "target": [
                "nsis"
            ],
            "icon": "assets/icon.ico",
            "publish": [
                "github"
            ]
        },
        "mac": {
            "target": [
                "dmg",
                "zip"
            ],
            "category": "public.app-category.education",
            "icon": "assets/icon.icns",
            "hardenedRuntime": true,
            "gatekeeperAssess": false,
            "publish": [
                "github"
            ]
        },
        "linux": {
            "target": [
                "AppImage",
                "deb",
                "rpm"
            ],
            "category": "Education",
            "icon": "assets/icons",
            "publish": [
                "github"
            ]
        },
        "publish": {
            "provider": "github",
            "owner": "yusufdinc974",
            "repo": "LinguaReader",
            "private": false,
            "releaseType": "release"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true,
            "createDesktopShortcut": true,
            "createStartMenuShortcut": true
        },
        "dmg": {
            "contents": [
                {
                    "x": 130,
                    "y": 220
                },
                {
                    "x": 410,
                    "y": 220,
                    "type": "link",
                    "path": "/Applications"
                }
            ]
        },
        "appImage": {
            "license": "LICENSE"
        }
    }
}
